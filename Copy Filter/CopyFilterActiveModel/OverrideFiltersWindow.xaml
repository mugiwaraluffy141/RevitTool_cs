<Window x:Class="MinhTranTools.CopyFilterActiveModel.OverrideConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Override Confirmation"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="300"
        Height="150"
        Closing="Window_Closing" >

    <Grid>
        <TextBlock Text="Some filters already exist in the destination views.
                   Do you want to override them?"
                   TextWrapping="Wrap"
                   Margin="0,20,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,67,0,0">
            <Button x:Name="btnYes" Content="Yes" Width="80" Margin="5" Click="btnYes_Click"/>
            <Button x:Name="btnNo" Content="No" Width="80" Margin="5" Click="btnNo_Click"/>
        </StackPanel>
    </Grid>
</Window>
